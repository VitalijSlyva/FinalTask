@model Rental.WEB.Models.Domain_Models.Rent.ConfirmDM

@{
    ViewBag.Title = "Confirm";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.HiddenFor(x => x.Order.Id)
    @Html.DisplayFor(x => Model.Order.Profile.Name)
    @Html.DisplayFor(x => Model.Order.Profile.Surname)
    @Html.DisplayFor(x => Model.Order.Profile.Patronymic)
    @Html.DisplayFor(x => Model.Order.Profile.Sex)
    @Html.DisplayFor(x => Model.Order.Profile.DateOfBirth)
    @Html.DisplayFor(x => Model.Order.Profile.Authory)
    @Html.DisplayFor(x => Model.Order.Profile.DateOfExpiry)
    @Html.DisplayFor(x => Model.Order.Profile.DateOfIssue)
    @Html.DisplayFor(x => Model.Order.Profile.Nationality)
    @Html.DisplayFor(x => Model.Order.Profile.Number)
    @Html.DisplayFor(x => Model.Order.Profile.PlaceOfBirth)
    @Html.DisplayFor(x => Model.Order.Profile.Record)
    @Html.DisplayFor(x => Model.Order.Profile.RNTRC)
    <hr />
    @Html.DisplayFor(x => Model.Order.Car.Brand)
    @Html.DisplayFor(x => Model.Order.Car.Model)
    @Html.DisplayFor(x => x.Order.DateStart)
    @Html.DisplayFor(x => x.Order.DateEnd)
    @Html.DisplayFor(x => x.Order.WithDriver)
    @Html.DisplayFor(x => x.Order.Payment.Price)
    @Html.DisplayFor(x => x.Order.Payment.IsPaid)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.IsConfirmed, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsConfirmed)
                @Html.ValidationMessageFor(model => model.IsConfirmed, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Подтвердить" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
