@model Rental.WEB.Models.View_Models.Manager.ShowConfirmsVM

@{
    ViewBag.Title = "Подтвердить";
    int f = 0;
    int n = 0;
}

@Styles.Render("~/Content/styles/manager/show-confirms")
@Styles.Render("~/Content/styles/shared/filter")

<div class="row">
    <div id="filter" class="col-md-4" >
        @using (Html.BeginForm())
        {
            <div id="button-container" class="container-fluid text-center">
                <input id="start-filters" type="submit" value="Отфильтровать" class="btn btn-warning">
                <input type="reset" value="Сбросить" class="btn btn-default" onclick="document.location='@Url.Action("ShowConfirms", "Manager")'" />
            </div>
            <br />
            foreach (var i in Model.Filters.GroupBy(x => x.Name))
            {
                <div class="">
                    <div class="btn btn-default dropdown-toggle" data-toggle="collapse" data-target="#filter-collapse-@f">
                        @( i.Key) <span class="glyphicon glyphicon-menu-down"></span>
                    </div>
                    <div class="collapse" id="filter-collapse-@(f++)">
                        <ul class="filter-items">
                            @foreach (var j in i)
                            {
                                <li>
                                    <input type="hidden" name="Filters[@n].Name" value="@j.Name" />
                                    <input type="hidden" name="Filters[@n].Text" value="@j.Text" />
                                    <input id="it@(n)" type="checkbox" name='Filters[@(n)].Checked' value="true"
                                           @(j.Checked ? "checked=\"checked\"" : "") />
                                    <label for="it@(n++)" class="text-warning">@j.Text</label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <br />
            }
        }
    </div>
    <div class=" col-md-8">
        @foreach (var i in Model.Orders)
        {
            <div class="col-md-12">
                <div class="col-md-10">
                    <h4><b>Номер: </b>@i.Id</h4>
                    <h4><b>Автомобиль: </b> @i.Car.Brand.Name @i.Car.Model</h4>
                    <h4><b>Период: </b> с @i.DateStart.ToShortDateString() по @i.DateEnd.ToShortDateString()</h4>
                    <h4 class="text-danger"><b>Оплата: </b>@(i.Payment.IsPaid ? "Оплачен" : "Неоплачен")</h4>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-success btn-dark" href="@Url.Action("Confirm","Manager",new { id=i.Id})">Подтвердить</a>
                </div>
            </div>
            <hr />
        }
    </div>
</div>
