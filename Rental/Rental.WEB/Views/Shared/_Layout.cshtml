<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/styles/shared/layout")
    @*<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
</head>
<body>
    <header>
        <nav class="navbar navbar-default" id="colorful-nav">
            <div class="container-fluid bg-black">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="@Url.Action("Index","Rent")">
                            <img src="@Url.Content("~/Images/logo.png")" alt="logo">
                        </a>


                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div id="user-page" class="navbar-right"><a href="@Url.Action("ShowUser","Account")" class="btn btn-default">@User.Identity.Name</a></div>
                    }
                    <div class="navbar-right">
                        <button type="button" class="navbar-toggle " data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole("client"))
                        {
                            <li class="nav-item-custom" style="width:25%;">
                                <a href="@Url.Action("Index","Rent")">
                                    <span class="glyphicon glyphicon-home"></span>
                                    <h5>ГЛАВНАЯ</h5>
                                </a>
                            </li>
                            <li class="nav-item-custom" style="width:25%;">
                                <a href="@Url.Action("ShowProfile","Client")">
                                    <span class="glyphicon glyphicon-user"></span>
                                    <h5>ПРОФИЛЬ</h5>
                                </a>
                            </li>
                            <li class="nav-item-custom" style="width:25%;">
                                <a href="@Url.Action("ShowUserOrders","Client")">
                                    <span class="glyphicon glyphicon-list-alt"></span>
                                    <h5>ЗАКАЗЫ</h5>
                                </a>
                            </li>
                            <li class="nav-item-custom" style="width:25%;">
                                <a href="@Url.Action("ShowPayments","Client")">
                                    <span class="glyphicon glyphicon-btc"></span>
                                    <h5>ТРАНЗАКЦИИ</h5>
                                </a>
                            </li>
                            @*<li class="nav-item-custom"><a href="#"><span class="glyphicon glyphicon-info-sign"></span><h5>ABOUT</h5></a></li>
                            <li class="nav-item-custom"><a href="#"><span class="glyphicon glyphicon-earphone"></span><h5>CONTACT</h5></a></li>
                            <li class="nav-item-custom"><a href="#"><span class="glyphicon glyphicon-search"></span><h5>SEARCH</h5></a></li>*@
                        }
                        else
                        {
                            <li class="nav-item-custom" style="width:33%;">
                                <a href="@Url.Action("Index","Rent")">
                                    <span class="glyphicon glyphicon-home"></span>
                                    <h5>ГЛАВНАЯ</h5>
                                </a>
                            </li>
                            <li class="nav-item-custom" style="width:33%;">
                                <a href="@Url.Action("Login","Account")">
                                    <span class="glyphicon glyphicon-log-in"></span>
                                    <h5>ВОЙТИ</h5>
                                </a>
                            </li>
                            <li class="nav-item-custom" style="width:33%;">
                                <a href="@Url.Action("Register","Account")">
                                    <span class="glyphicon glyphicon-registration-mark"></span>
                                    <h5>РЕГИСТРАЦИЯ</h5>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="body" class="container body-content">
        @RenderBody()

    </div>

    <footer class="container-fluid text-center">
        <div class="col-md-6">
            <p>Наш адрес: Харьков улица Сумская 18</p>
            <p>Телефон: +380999626899</p>
            <p>Почта: cardoor@gmail.com</p>
        </div>
        <div class="col-md-6">
            <a>
                <img src="@Url.Content("~/Images/insta.ico")" />
            </a>
            <a>
                <img src="@Url.Content("~/Images/yt.ico")" />
            </a>
            <a>
                <img src="@Url.Content("~/Images/fb.ico")" />
            </a>
        </div>
        <div class="col-md-12">
            <p > @DateTime.Now.Year Все права защищены </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
